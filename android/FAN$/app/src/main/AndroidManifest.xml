<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fansfunding.fan">

    <uses-sdk tools:overrideLibrary="dmax.dialog" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <!-- 主界面 -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 分类目录界面 -->
        <activity android:name=".CategoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.CATEGORY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 我的项目界面 -->
        <activity android:name=".user.project.activity.MyProjectActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.USER.PROJECT.ACTIVITY.PROJECT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 登陆界面 -->
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert.Red">
            <intent-filter>
                <action android:name="android.intent.action.FANS.LOGIN.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 我的动态界面 -->
        <activity android:name=".NewsActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.NEWS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 个人主页 -->
        <activity android:name=".HomepageActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.HOMEPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- 项目详情 -->
        <activity android:name=".project.activity.ProjectDetailActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.PROJECT.ACTIVITY.PROJECTDETAIL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 项目评论详情 -->
        <activity android:name=".project.activity.ProjectDetailCommentActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.PROJECT.ACTIVITY.PROJECTDETAILCOMMENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 发表评论 -->
        <activity android:name=".project.activity.ProjectCommentActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.PROJECT.ACTIVITY.PROJECTCOMMENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 项目支持 -->
        <activity android:name=".project.activity.ProjectSupportActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.PROJECT.ACTIVITY.PROJECTSUPPORT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 聊天界面 -->
        <activity android:name=".ChatActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.CHAT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 动态详情 -->
        <activity android:name=".NewsDetailActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.NEWSDETAIL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 搜索界面 -->
        <activity android:name=".search.activity.SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.SEARCH.ACTIVITY.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 设置界面 -->

        <activity android:name=".SettingActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.SETTING" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 我的订单界面 -->
        <activity android:name=".user.order.activity.MyOrderActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.USER.ORDER.ACTIVITY.MYORDER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 地址管理界面 -->
        <activity
            android:name=".AddressActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.FANS.ADDRESS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddressManagmentAty"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.FANS.ADDRESSMANAGEMENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 账号和密码设置页面 -->
        <activity android:name=".SettingAccountActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.SETTINGACCOUNT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 用户信息修改界面 -->
        <activity android:name=".UserInfoActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.USERINFO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- 修改密码界面 -->
        <activity
            android:name=".ResetPasswordActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert.Red">
            <intent-filter>
                <action android:name="android.intent.action.FANS.RESETPASSWORD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 微博授权界面 -->
        <activity
            android:name="com.sina.weibo.sdk.component.WeiboSdkBrowser"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- 阿里云 -->
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"></activity>
        <activity
            android:name="com.alipay.sdk.auth.AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"></activity>

        <!-- 发起项目界面 -->
        <activity android:name=".project.activity.CreateProjectActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.CREATEPROJECT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 发起动态界面 -->
        <activity android:name=".project.activity.ProjectPublishDynamicActivity">
            <intent-filter>
                <action android:name="android.intent.action.FANS.PUBLISHDYNAMIC" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!--查看大图-->
        <activity android:name=".utils.BigPictureActivity">
            <intent-filter>
            <action android:name="android.intent.action.FANS.UTILS.BIGPICTURE" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>
    </application>

</manifest>