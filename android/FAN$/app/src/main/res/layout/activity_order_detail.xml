<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fansfunding.fan.user.order.activity.OrderDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/toolbar_white_theme"
        android:background="@color/colorPrimary"
        />

    <!--订单编号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:padding="@dimen/layout_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号"/>

        <!--订单编号信息-->
        <TextView
            android:id="@+id/tv_order_detail_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:paddingLeft="@dimen/layout_padding"/>

    </LinearLayout>

    <!--分割线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">
        <include
            android:layout_width="match_parent"
            android:layout_height="1dp"
            layout="@layout/divider"
            android:layout_marginLeft="@dimen/layout_padding"
            android:layout_marginRight="@dimen/layout_padding"/>
    </LinearLayout>

    <!--订单信息-->
    <LinearLayout
        android:id="@+id/ll_order_detail_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding"
        android:orientation="horizontal"
        android:background="@color/colorWhite">
        <!--项目回馈图片-->
        <ImageView
            android:id="@+id/iv_order_detail_image"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/layout_padding">
            <!--项目名-->
            <TextView
                android:id="@+id/tv_order_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subhead_text_size" />

            <!--支付金额-->
            <TextView
                android:id="@+id/tv_order_detail_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/subhead_text_size"
                android:text="¥"/>

            <TextView
                android:id="@+id/tv_order_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/list_text_size"
                android:layout_toRightOf="@id/tv_order_detail_price_label"
                android:paddingLeft="4dp"/>
        </RelativeLayout>

    </LinearLayout>

    <!--地址信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/layout_padding"
        android:padding="@dimen/layout_padding"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/address_icon"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_order_detail_people_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人:"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tv_order_detail_people_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_toRightOf="@id/tv_order_detail_people_name_label"
                    android:layout_toLeftOf="@+id/tv_order_detail_people_phone"/>
                <TextView
                    android:id="@+id/tv_order_detail_people_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/tv_order_detail_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="收货地址:"
                android:textSize="@dimen/body_text_size"
                android:textColor="@color/colorLabelGrey"/>
        </LinearLayout>
    </LinearLayout>

    <!--支付方式-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_padding"
        android:background="@color/colorWhite"
        android:padding="@dimen/layout_padding"
        android:orientation="vertical">

        <!--支付方式-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"/>
            <TextView
                android:id="@+id/tv_order_detail_pay_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_padding"
                android:textColor="@color/colorBlack"
                android:text="支付宝"/>
        </LinearLayout>

        <!--交易单号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易单号"/>
            <TextView
                android:id="@+id/tv_order_detail_trade_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_padding"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

        <!--交易时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易时间"/>
            <TextView
                android:id="@+id/tv_order_detail_pay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_padding"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
