<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginRight="@dimen/layout_padding"
   >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_message_notification_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/layout_padding"
        />


    <LinearLayout
        android:id="@+id/ll_message_notification_father"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_message_notification_head"
        android:layout_marginTop="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_message_notification_son"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_message_notification_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/iv_message_notification_head"/>

            <TextView
                android:id="@+id/tv_message_notification_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/tv_message_notification_name"
                android:layout_marginLeft="4dp"/>
            <TextView
                android:gravity="end"
                android:text="07-21 27:19"
                android:textSize="14sp"
                android:id="@+id/tv_message_notification_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


        </LinearLayout>



        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/tv_message_notification_info"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <!--分割线-->
        <View
            android:layout_marginTop="4dp"
            android:id="@+id/fuckingline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey" />

    </LinearLayout>






</RelativeLayout>