<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_padding"
    android:background="@color/colorWhite">
    <!--项目图片-->
    <ImageView
        android:id="@+id/iv_PJ_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        />
    <!--项目介绍-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_PJ_Image"
        android:layout_toLeftOf="@+id/ibtn_PJ_Detial"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <!--项目名-->
        <TextView
            android:id="@+id/tv_PJ_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--项目简介-->
        <TextView
            android:id="@+id/tv_PJ_Intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text=""/>
        <!--进度条-->
        <ProgressBar
            android:id="@+id/pb_PJ_Rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:progress="50"/>

        <!--筹资信息-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--筹资金额-->
            <TextView
                android:id="@+id/tv_PJ_Finance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <!--支持人数-->
            <TextView
                android:id="@+id/tv_PJ_SupportNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="2dp"/>
        </LinearLayout>


    </LinearLayout>
    <!--项目细节按钮-->
    <ImageView
        android:id="@+id/ibtn_PJ_Detial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/detialtest"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"/>
</RelativeLayout>
