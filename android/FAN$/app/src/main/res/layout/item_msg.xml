<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/left_layout">
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_alignParentLeft="true"
            android:id="@+id/iv_message_left_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            />
        <LinearLayout
            android:layout_toRightOf="@+id/iv_message_left_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/chat_recv_bubble"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/left_msg"
                android:textSize="16sp"
                android:layout_margin="2dp"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/right_layout"
       >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_message_right_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            />
        <LinearLayout
            android:layout_toLeftOf="@id/iv_message_right_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/char_send_bubble"
          >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rigth_msg"
                android:layout_margin="2dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>