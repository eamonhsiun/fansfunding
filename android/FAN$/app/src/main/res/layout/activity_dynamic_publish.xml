<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".project.activity.ProjectPublishDynamicActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_dynamic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:theme="@style/toolbar_white_theme">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/leanerlayout_subline"
        android:dividerPadding="@dimen/layout_padding"
        android:orientation="vertical"
        android:showDividers="middle|end">


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_dynamic_content"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_margin="@dimen/layout_padding"
            android:background="@null"
            android:gravity="top"
            android:hint="请填写更新的内容..."
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/subhead_text_size" />
    </LinearLayout>

    <cn.finalteam.galleryfinal.widget.HorizontalListView
        android:id="@+id/lv_imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginTop="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
        android:cacheColorHint="@android:color/transparent"
        android:clipToPadding="false"
        android:fadingEdge="none"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        android:verticalSpacing="2dp">

    </cn.finalteam.galleryfinal.widget.HorizontalListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_open_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@android:drawable/ic_menu_gallery" />

    </RelativeLayout>


</LinearLayout>