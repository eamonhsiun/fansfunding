<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fansfunding.fan.AddressActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:theme="@style/toolbar_white_theme">

    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/lv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_address"
        android:dividerHeight="10dp"
        android:divider="@color/colorDividerGrey"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        >

    </ListView>
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_address_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_marginBottom="56dp"
        android:src="@drawable/fab_add"

        />

</RelativeLayout>
