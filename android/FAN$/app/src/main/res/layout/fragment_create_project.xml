<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical"
    android:focusable="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".project.activity.CreateProjectActivity"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/leanerlayout_subline"
            android:dividerPadding="@dimen/layout_padding"
            android:orientation="vertical"
            android:showDividers="middle|end"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linearlayout_padding"
                android:layout_margin="@dimen/layout_padding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="截止日期"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/subhead_text_size" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_project_create_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:gravity="end"
                    android:text="2016-7-10"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/subhead_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linearlayout_padding"
                android:layout_margin="@dimen/layout_padding"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linearlayout_padding"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="需要支持者收货地址"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/subhead_text_size" />

                <android.support.v7.widget.SwitchCompat
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linearlayout_padding"
                    android:layout_weight="2"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linearlayout_padding"
                android:layout_margin="@dimen/layout_padding"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linearlayout_padding"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="筹款金额"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/subhead_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal"

                    >

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/et_target_money"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/linearlayout_padding"

                        android:background="@null"
                        android:cursorVisible="false"
                        android:gravity="center_vertical|right"
                        android:hint="填写目标金额"
                        android:inputType="number"
                        android:textSize="@dimen/subhead_text_size" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/linearlayout_padding"
                        android:gravity="center_vertical"
                        android:text=" 元"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/subhead_text_size" />
                </LinearLayout>


            </LinearLayout>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_project_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/linearlayout_padding"
                android:layout_margin="@dimen/layout_padding"
                android:background="@null"
                android:hint="请输入项目名称"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/subhead_text_size" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_project_desc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="@dimen/layout_padding"
                android:background="@null"
                android:gravity="top"
                android:hint="请详细描述您的项目"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/subhead_text_size" />
        </LinearLayout>

        <cn.finalteam.galleryfinal.widget.HorizontalListView
            android:id="@+id/lv_imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:cacheColorHint="@android:color/transparent"
            android:clipToPadding="false"
            android:fadingEdge="none"
            android:horizontalSpacing="2dp"
            android:numColumns="3"
            android:verticalSpacing="2dp">

        </cn.finalteam.galleryfinal.widget.HorizontalListView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="91dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_open_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/fab_add"
                app:fabSize="normal"
                android:layout_marginRight="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>