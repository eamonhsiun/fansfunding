<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.fansfunding.fan.social.activity.MomentSelectProjectActivity">
    <!--标题栏-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_moment_select_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:theme="@style/toolbar_white_theme"
        android:elevation="4dp">

        <!--搜索内容输入栏-->
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_search_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_homepage_followorchat"
            android:padding="4dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_marginRight="@dimen/layout_padding"
            android:imeOptions="actionSearch"
            android:hint="搜索项目"
            android:textSize="16sp"
            android:textColor="@color/colorLabelGrey"
            android:textColorHint="@color/colorLabelGrey"/>
    </android.support.v7.widget.Toolbar>

    <com.fansfunding.PullListView.XListView
        android:id="@+id/lv_moment_select_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="5dp"
        android:divider="@color/transparent"
        android:headerDividersEnabled="false"
        android:listSelector="@color/transparent"
        android:layout_below="@+id/toolbar_moment_select_project">

    </com.fansfunding.PullListView.XListView>

</RelativeLayout>
