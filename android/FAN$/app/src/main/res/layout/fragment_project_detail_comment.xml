<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.fansfunding.fan.project.fragment.ProjectDetailCommentFragment">
    <com.fansfunding.fan.utils.ProjectDetailListView
        android:id="@+id/lv_PJ_detail_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#00000000">
    </com.fansfunding.fan.utils.ProjectDetailListView>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_PJ_detail_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/layout_padding"
        app:backgroundTint="@color/colorButtonRed"
        android:layout_marginBottom="8dp"
        android:src="@drawable/fab_add"/>

</RelativeLayout>
