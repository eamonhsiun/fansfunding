<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding"
    android:background="@color/colorWhite">
    <!--项目回报图片-->
    <ImageView
        android:id="@+id/iv_project_detail_reward_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/layout_padding"
        android:src="@drawable/pjimagetest"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_project_detail_reward_image"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_project_detail_reward_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支持23元"
            android:textSize="@dimen/subhead_text_size"/>

        <TextView
            android:id="@+id/tv_project_detail_reward_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="捐赠者请留下QQ号码，管理员会拉进珞珈山皮划艇小分队的群。进群者享有皮划艇的进击使用权和被救助权。"/>

    </LinearLayout>

</RelativeLayout>
