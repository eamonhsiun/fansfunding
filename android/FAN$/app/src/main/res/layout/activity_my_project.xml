<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fansfunding.fan.user.project.activity.MyProjectActivity">

    <!--标题栏-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_myProject"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>


    <!--标签栏-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_myProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_myProject"
        android:background="@color/colorPrimary"
        app:tabTextColor="@color/colorUnselectedWhite"
        app:tabSelectedTextColor="@color/colorWhite"
        app:tabIndicatorColor="@color/colorWhite"
        >
    </android.support.design.widget.TabLayout>

    <!--我的项目内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_myProject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_myProject">

    </android.support.v4.view.ViewPager>
</RelativeLayout>
