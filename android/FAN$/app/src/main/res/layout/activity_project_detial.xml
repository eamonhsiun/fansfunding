    <com.fansfunding.verticalslide.DragLayout
        android:id="@+id/drag_project_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_project_detail"
        android:layout_above="@+id/btn_project_detail_support">
        <FrameLayout
            android:id="@+id/frame_project_detail_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
        <FrameLayout
            android:id="@+id/frame_project_detail_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

    </com.fansfunding.verticalslide.DragLayout>
    <Button
        android:id="@+id/btn_project_detail_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即支持"
        android:background="@color/colorButtonRed"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        />
    <!--<ScrollView
        android:id="@+id/sv_project_detail_information"
        android:layout_width="match_parent"
