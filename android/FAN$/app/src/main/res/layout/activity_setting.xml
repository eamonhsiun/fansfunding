<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.fansfunding.fan.SettingActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <!--收获地址管理-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding"
        android:textSize="@dimen/subhead_text_size"
        android:text="收货地址管理"/>
    <TextView
        android:id="@+id/tv_setting_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding"
        android:textSize="@dimen/list_text_size"
        android:text="我的收获地址"/>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
        android:background="@color/colorGrey"/>

    <!--账号设置-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subhead_text_size"
        android:padding="@dimen/layout_padding"
        android:text="账号设置"/>
    <LinearLayout
        android:id="@+id/ll_setting_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_text_size"
            android:text="账号和密码"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改账号密码，绑定社交账号"/>
    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
        android:background="@color/colorGrey"/>

    <!--关于与帮助-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subhead_text_size"
        android:padding="@dimen/layout_padding"
        android:text="关于与帮助"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_text_size"
        android:padding="@dimen/layout_padding"
        android:text="意见反馈"/>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
        android:background="@color/colorGrey"/>

    <!--检查更新-->
    <LinearLayout
        android:id="@+id/ll_setting_check_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_text_size"
            android:text="检查更新"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前版本1.0"/>
    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
        android:background="@color/colorGrey"/>

    <Button
        android:id="@+id/btn_setting_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_padding"
        android:text="退出登录"
        android:textColor="@color/colorWhite"/>
</LinearLayout>
