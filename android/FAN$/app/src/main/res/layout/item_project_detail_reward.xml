<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding"
    android:background="@color/colorWhite">
    <!--项目回报图片-->
    <!--<ImageView
        android:id="@+id/iv_project_detail_reward_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="@dimen/layout_padding"
        android:src="@drawable/ship"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支持¥"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/subhead_text_size"/>
            <TextView
                android:id="@+id/tv_project_detail_reward_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/subhead_text_size"/>
        </LinearLayout>

        <!--支持限制-->
        <LinearLayout
            android:id="@+id/ll_project_detail_reward_support_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <!--已支持的次数-->
            <TextView
                android:id="@+id/tv_project_detail_reward_support_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"/>
            <!--限制的支持次数-->
            <TextView
                android:id="@+id/tv_project_detail_reward_support_ceiling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_project_detail_reward_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColor="@color/colorPublishGrey"
            android:text=""/>

        <com.fansfunding.fan.utils.MyGridView
            android:id="@+id/gv_project_detail_reward_photo_list"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="4dp"
            android:layout_marginTop="@dimen/layout_padding">

        </com.fansfunding.fan.utils.MyGridView>
    </LinearLayout>

</RelativeLayout>
