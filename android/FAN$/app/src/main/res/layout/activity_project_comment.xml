<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.fansfunding.fan.project.activity.ProjectCommentActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_PJ_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:titleTextColor="@color/colorWhite"
        app:theme="@style/toolbar_white_theme">
    </android.support.v7.widget.Toolbar>

    <sj.keyboard.widget.EmoticonsEditText
        android:id="@+id/et_PJ_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_PJ_comment"
        android:padding="@dimen/layout_padding"
        android:textSize="@dimen/subhead_text_size"
        android:gravity="top"
        android:background="@null"/>
    <include
        android:id="@+id/divider_PJ_comment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        layout="@layout/divider"
        android:layout_above="@+id/ll_PJ_comment_selector"/>
    <!--选择栏-->
    <LinearLayout
        android:id="@+id/ll_PJ_comment_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/iv_PJ_comment_show_emojicon"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/input_emoji"/>
    </LinearLayout>
</RelativeLayout>
