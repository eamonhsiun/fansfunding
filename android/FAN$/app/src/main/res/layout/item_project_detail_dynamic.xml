<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding"
    android:paddingTop="@dimen/layout_padding">
    <!--发布动态用户头像-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_project_detail_dynamic_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/layout_padding"
        android:src="@drawable/pjimagetest"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_project_detail_dynamic_head">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--发表动态用户昵称-->
            <TextView
                android:id="@+id/tv_project_detail_dynamic_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Immortals"
                android:textColor="@color/colorPublishGrey"
                android:layout_toLeftOf="@+id/tv_project_detail_dynamic_time"/>
            <!--动态发表时间-->
            <TextView
                android:id="@+id/tv_project_detail_dynamic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorLabelGrey"
                android:text="刚刚"/>
        </RelativeLayout>

        <!--动态内容-->
        <TextView
            android:id="@+id/tv_project_detail_dynamic_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/content_padding"
            android:text="这是一段评论内容a"

            android:textColor="@color/colorPublishGrey"
            />

        <!--动态图片-->
        <com.fansfunding.fan.utils.MyGridView
            android:id="@+id/gv_project_detail_dynamic_photo_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="4dp"
            android:layout_marginTop="@dimen/layout_padding"></com.fansfunding.fan.utils.MyGridView>

        <!--分割线-->

        <include
            layout="@layout/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/gv_project_detail_dynamic_photo_list"
            android:layout_marginTop="@dimen/layout_padding"/>
        </LinearLayout>
</RelativeLayout>
