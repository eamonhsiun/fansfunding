<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/layout_padding"
    android:elevation="2dp"
    android:background="@color/white"
   >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_message_notification_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/layout_padding"
        />


    <LinearLayout
        android:id="@+id/ll_message_notification_father"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:id="@+id/tv_message_notification_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
            />

            <TextView
                android:id="@+id/tv_message_notification_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/tv_message_notification_name"
                />

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:id="@+id/tv_message_notification_info"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        </LinearLayout>





        <!--分割线-->
        <!--<View-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:id="@+id/fuckingline"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/colorGrey" />-->




    <TextView
        android:layout_margin="@dimen/layout_padding"
        android:textSize="14sp"
        android:id="@+id/tv_message_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</LinearLayout>