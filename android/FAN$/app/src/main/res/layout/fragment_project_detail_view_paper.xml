<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.fansfunding.fan.ProjectDetailViewPaperFragment">
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_project_detail"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/colorSupportRed"
        app:tabTextColor="@color/colorWhite"
        app:tabSelectedTextColor="@color/colorWhite"
        app:tabIndicatorColor="@color/colorWhite">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_project_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_project_detail">

    </android.support.v4.view.ViewPager>
</RelativeLayout>
