<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>

    </style>

    <style name="AppTheme.NoBar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.NoBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--登陆界面style-->
    <style name="AppTheme.Login">
        <item name="android:actionBarStyle" >@style/ActionBar_Login_Style</item>
    </style>

    <style name="ActionBar_Login_Style" parent="@android:style/Widget.Holo.Light.ActionBar" >
        <item name="android:titleTextStyle">@style/ActionBar_Login_titleStyle</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:actionBarDivider">@null</item>

    </style>
    <style name="ActionBar_Login_titleStyle">
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <!--toolbar返回键按钮-->
    <style name="toolbar_white_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!--目前无用-->
    <style name="AlertDialog.AppCompat.Light.Text" parent="AlertDialog.AppCompat.Light">
        <item name="android:buttonBarButtonStyle">@style/Base.Widget.AppCompat.Button.Text</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Text" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorDeepGray</item>
    </style>
    <style name="Widget.Design.TextInputLayout.Test" parent="Widget.Design.TextInputLayout">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.Dialog.Alert.Red" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">亲，稍等就好呦</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="ActionSheetStyleiOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">#1E82FF</item>
        <item name="otherButtonTextColor">#1E82FF</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">12sp</item>
    </style>


</resources>
