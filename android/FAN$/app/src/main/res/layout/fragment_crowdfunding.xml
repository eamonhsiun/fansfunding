<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.fansfunding.fan.CrowdFundingFragment"
    >

    <!--搜索栏，只是用来跳转-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_crowdfundinghead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:elevation="3dp"
        android:background="#DC4B4B">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:adjustViewBounds="true"
            android:src="@android:drawable/ic_search_category_default" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subhead_text_size"
            android:text="搜索项目、网红名、用户"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/content_padding"/>
    </android.support.v7.widget.Toolbar>

    <com.fansfunding.PullListView.XListView
        android:id="@+id/lv_popularRecommendation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp"
        android:divider="@color/transparent"
        android:headerDividersEnabled="false"
        android:layout_below="@id/toolbar_crowdfundinghead"
        android:listSelector="@color/colorWhite">
    </com.fansfunding.PullListView.XListView>

</RelativeLayout>